{% extends 'base.html.twig' %}

{% block title %}Chapp - Room{% endblock %}

{% block body %}

{% block stylesheets %}
        <link href="{{ asset('../templates/room/room.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

<nav class="navbar bg-light fixed-top">
    <div class="content-form d-flex justify-content-between align-items-center">
        <div class="contenedor-image">
            <a href="{{ path('home') }}">
                <img src="\chapsol\templates\apartments\images\logo.png" alt="Smiley face" class="logo-left">
            </a>
        </div>
        <div class="me-4">
            <a href="{{app.request.headers.get('referer')}}">
                <div class="circle-div align-items-center">
                    <i class="fa-solid fa-circle-arrow-left icono-house"></i>
                </div>
            </a>
        </div>
    </div>
</nav>

<div class="bg-titles">
    <div class="container">
        <div class="row align-items-start">
            <div class="col flex_desc flex-column">
                <div class="flex-column height_title">
                    <p class="rooms_title">{{room.title}}</p>
                </div>
                <div class="flex-column height_info">
                    <p class="rooms_info"><i class="fa-solid fa-location-dot"></i> {{room.location}}</p>
                </div>
                <div class="flex_column height_detail">
                    <p class="rooms_detail">{{room.description}}</p>
                </div>
            </div>
            <div class="col flex-column flex_img">
            {# <form action="apartments" method="GET"> #}
                <div class="gallery_images">
                    <img src="\chapsol\templates\room\images\room1.avif" class="images_desc">
                </div>
                <div class="container-forms">
                    <div class="booking-form h-100">
                        <div class="form_field align-items-center d-flex">{{room.nightPrice}}€ / night
                        </div>
                        <div class="form_field align-items-center d-flex">{{entrada}} - {{salida}}
                        </div>
                        <div class="form_field align-items-center d-flex">Guests: {{guest}}
                        </div>
                        <div class="form_field align-items-center d-flex">
                            <input type="text" class="form-control cont-place-form" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Name">
                        </div>
                        <div class="form_field align-items-center d-flex">
                            <input type="email" class="form-control cont-place-form" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
                        </div>
                        <div class="form_field align-items-center d-flex">
                            <input type="text" class="form-control cont-place-form" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Telephone">
                        </div>
                        <div class="form_field align-items-center d-flex">Total: {{totalPrice}}€
                        </div>
                        <div class="form_field align-items-center pe-0 d-flex justify-content-around">
                            <button type="submit" class="btn cont-search-form">Reserve</button>
                        </div>
                    </div>
                </div>
            {# </form> #}
            </div>
        </div>
    </div>
</div>
{% endblock %}
